<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/ll_equipment_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010"
        android:background="@drawable/backgroud_normal_white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_alarm_images"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dm020"
            android:layout_height="@dimen/dm300"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_gravity="center"
             />
        <TextView
            android:id="@+id/tv_alarm_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm060"
            android:layout_marginTop="@dimen/dm010"
            android:layout_marginBottom="@dimen/dm010"
            android:text="时间"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/dm025" />


    </LinearLayout>

</LinearLayout>