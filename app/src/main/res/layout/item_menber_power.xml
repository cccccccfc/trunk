<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm090"
            android:layout_marginTop="@dimen/dm010"
            android:layout_marginBottom="@dimen/dm010"
            android:background="@drawable/backgroud_normal_white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_item_member_power_img"
                android:layout_width="@dimen/dm070"
                android:layout_height="@dimen/dm070"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_gravity="center"
                android:src="@drawable/img_default_person"/>
            <TextView
                android:id="@+id/tv_item_member_power_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm050"
                android:text="刘佳明"
                android:textColor="@color/colorTextDeep"
                android:textSize="@dimen/dm026" />
            <TextView
                android:id="@+id/tv_item_member_power_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="管理员：17066000066"
                android:textColor="@color/colorTextDeep"
                android:textSize="@dimen/dm026" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
