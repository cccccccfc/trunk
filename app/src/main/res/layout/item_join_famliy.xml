<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm117"
            android:layout_marginTop="@dimen/dm005"
            android:layout_marginBottom="@dimen/dm005"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:background="@drawable/backgroud_normal_white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_item_join_famliy_img"
                android:layout_width="@dimen/dm080"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_gravity="center"
                android:src="@drawable/img_default_person"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="@dimen/dm020"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_item_join_famliy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的家庭"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="@dimen/dm026" />
                <TextView
                    android:id="@+id/tv_item_join_famliy_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm005"
                    android:text="管理员：17600661659"
                    android:textColor="@color/colorTextDeep"
                    android:textSize="@dimen/dm026" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_item_join_famliy_join"
                android:layout_width="@dimen/dm140"
                android:layout_height="match_parent"
                android:text="加入"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/backgroud_bg_app_other"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
