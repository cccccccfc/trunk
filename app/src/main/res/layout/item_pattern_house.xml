<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pattern_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/dm010"
        android:background="@drawable/backgroud_normal_white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        >
        <TextView
            android:id="@+id/tv_pattern_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="情景模式"
            android:textColor="@color/textblack"
            android:textSize="@dimen/dm026" />
        <ImageView
            android:id="@+id/img_pattern_lajit"
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm032"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm020"
            android:src="@drawable/img_pattern_lajit" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="@color/textblack"
        android:layout_height="@dimen/dm001" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080">
        <RelativeLayout
            android:id="@+id/relative_time_text"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dm090"
            >
            <TextView
                android:id="@+id/tv_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="执行时间"
                android:textColor="@color/textblack"
                android:textSize="@dimen/dm028" />
            <ImageView
                android:layout_width="@dimen/dm026"
                android:layout_height="@dimen/dm028"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dm020"
                android:src="@drawable/img_pattern_right" />
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/dm001"
            android:background="@color/textblack"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/relative_onoff_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dm090"

            >
            <TextView
                android:id="@+id/tv_onoff_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开还是关"
                android:layout_centerInParent="true"
                android:textColor="@color/textblack"
                android:textSize="@dimen/dm028" />
            <ImageView
                android:layout_width="@dimen/dm026"
                android:layout_height="@dimen/dm028"
               android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dm020"
                android:src="@drawable/img_pattern_right" />
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>