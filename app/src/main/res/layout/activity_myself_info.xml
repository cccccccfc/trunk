<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nomarlBg"
    android:id="@+id/ll_myself_information_content"
    android:orientation="vertical">

    <include layout="@layout/activity_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm140"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm020"
            android:text="头像"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm030" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/iv_myself_information_img"
            android:layout_width="@dimen/dm110"
            android:layout_height="@dimen/dm110"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:src="@drawable/img_default_person" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myself_information_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="昵称"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_myself_information_name"
            android:layout_width="@dimen/dm200"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:textColor="@color/colorTextDeep"
            android:textColorHint="@color/colorTextDeep"

            android:textSize="@dimen/dm026"
            android:gravity="right"
            android:background="@null"
            android:visibility="gone"
            android:imeOptions="actionDone"
            android:maxLength="8"
            android:inputType="text"
            android:maxLines="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_myself_information_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:text="请输入您的昵称"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myself_information_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="生日"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_myself_information_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:text="请输入您的生日"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myself_information_fale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="性别"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_myself_information_fale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:text="男"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_myself_information_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="所在地"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_myself_information_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:text="请输入您的所在地"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
</LinearLayout>
