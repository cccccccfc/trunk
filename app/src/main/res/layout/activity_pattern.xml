<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temcolorback"
    android:id="@+id/ll_myself_information_content"
    android:orientation="vertical">

    <include layout="@layout/activity_base_title" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_house_manager_flour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_house_manager_flour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm010"
            android:layout_marginRight="@dimen/dm010"
            android:layout_marginTop="@dimen/dm010"
            android:layout_marginBottom="@dimen/dm010">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lineat_pattern_hint"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm020"
        android:background="@drawable/backgroud_normal_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="情景模式"
            android:textSize="@dimen/dm028"
            android:textColor="@color/textblack"
            android:layout_marginTop="@dimen/dm030"
            />
        <ImageView
            android:layout_marginTop="@dimen/dm030"
            android:layout_width="@dimen/dm450"
            android:layout_height="@dimen/dm450"
            android:src="@drawable/img_pattern_hint"
            />
        <TextView
            android:layout_marginTop="@dimen/dm030"
            android:text="您还没有添加情景模式，快来添加一个吧~"
            android:textSize="@dimen/dm028"
            android:textColor="@color/textblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/dm030"
            android:text="您可以添加一个情景，当执行该情景时，设备"
            android:textSize="@dimen/dm024"
            android:textColor="@color/bgBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="会按照您定义的顺序来执行"
            android:textSize="@dimen/dm024"
            android:textColor="@color/bgBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
