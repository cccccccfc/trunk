<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm150"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_add_member_pop_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginBottom="@dimen/dm010"
        android:paddingRight="@dimen/dm020"
        android:text="管理员"
        android:textColor="@color/colorTextShallow"
        android:textSize="@dimen/dm024"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/tv_add_member_pop_2"
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm010"
        android:text="普通成员"
        android:textColor="@color/colorTextShallow"
        android:textSize="@dimen/dm024"/>
    </LinearLayout>
</LinearLayout>
