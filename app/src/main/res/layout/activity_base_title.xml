<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm075"
                android:background="@color/colorBackGroud">

    <ImageView
        android:id="@+id/iv_base_backto"
        android:layout_width="@dimen/dm020"
        android:layout_height="@dimen/dm036"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm020"
        android:src="@drawable/base_back"/>
    <ImageView
        android:id="@+id/iv_base_back"
        android:layout_width="@dimen/dm100"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="变化的名字"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dm034"/>
    <ImageView
        android:id="@+id/iv_base_down"
        android:layout_width="@dimen/dm025"
        android:layout_height="@dimen/dm014"
        android:layout_toRightOf="@id/tv_base_title"
        android:layout_marginLeft="@dimen/dm015"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/icon_home_down"/>
    <ImageView
        android:id="@+id/iv_base_edit"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"

        android:layout_centerVertical="true"
        android:layout_toLeftOf = "@+id/iv_base_add"
        android:layout_marginRight="@dimen/dm020"
        android:visibility="gone"
        android:src="@drawable/base_edit"/>
    <ImageView
        android:id="@+id/iv_base_add"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/base_add"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_base_shezhi"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/img_shezhi"/>
    <ImageView
        android:id="@+id/iv_base_member_add"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:visibility="gone"
        android:src="@drawable/icon_member_add"/>

    <TextView
        android:id="@+id/tv_base_flour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm020"
        android:text="添加楼层"
        android:paddingTop="@dimen/dm020"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:textSize="@dimen/dm026"/>
    <TextView
        android:id="@+id/tv_base_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm020"
        android:text="保存"
        android:paddingTop="@dimen/dm020"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:textSize="@dimen/dm026"/>
    <TextView
        android:id="@+id/tv_base_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm020"
        android:text="全选"
        android:paddingTop="@dimen/dm020"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:textSize="@dimen/dm026"/>
</RelativeLayout>
