<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/backgroud_normal_white"
        android:layout_marginLeft="@dimen/dm010"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm010"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm038"
            android:layout_height="@dimen/dm038"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_gravity="center"
            android:src="@drawable/icon_sign"/>
        <TextView
            android:id="@+id/tv_item_flour_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一楼"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="@dimen/dm100"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginLeft="@dimen/dm020"
            android:id="@+id/rl_item_flour_manager"
            android:gravity="right|center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_item_flour_up"
                android:layout_width="@dimen/dm032"
                android:layout_height="@dimen/dm018"
                android:src="@drawable/icon_up"/>
            <ImageView
                android:id="@+id/iv_item_flour_down"
                android:layout_width="@dimen/dm032"
                android:layout_height="@dimen/dm018"
                android:visibility="invisible"
                android:src="@drawable/icon_down"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_flour_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:layout_marginTop="@dimen/dm010"
            android:layout_marginLeft="@dimen/dm010"
            android:layout_marginRight="@dimen/dm010"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_add_house_manager"
                android:layout_width="0dp"
                android:layout_height="@dimen/dm080"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/backgroud_normal_white"
                android:gravity="center"
                android:text="+添加房间"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm026" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="1" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_flour_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginTop="@dimen/dm010"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dm010"
        android:layout_marginRight="@dimen/dm010"
        android:layout_marginBottom="@dimen/dm020"
        android:id="@+id/ll_item_flour_manager_delete"
        android:background="@drawable/backgroud_normal_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除该楼层"
            android:textColor="@color/quitRed"
            android:textSize="@dimen/dm026"/>
    </LinearLayout>
</LinearLayout>
