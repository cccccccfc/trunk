<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:layout_margin="@dimen/dm010"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_house_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:layout_gravity="center_vertical"
                android:background="@drawable/backgroud_normal_white"
                android:gravity="center"
                android:text="默认房间"
                android:textColor="@color/colorTextShallow"
                android:textSize="@dimen/dm026" />
        </LinearLayout>
        <ImageView
            android:id="@+id/lv_item_house_delete"
            android:layout_width="@dimen/dm036"
            android:layout_height="@dimen/dm036"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_delete" />
    </RelativeLayout>
</LinearLayout>
