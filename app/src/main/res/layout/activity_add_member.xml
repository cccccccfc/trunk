<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nomarlBg"
    android:id="@+id/ll_myself_information_content"
    android:orientation="vertical">

    <include layout="@layout/activity_base_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@drawable/backgroud_normal_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成员手机号"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/et_add_member_phone"
            android:layout_width="@dimen/dm350"
            android:layout_height="match_parent"
            android:background="@drawable/backgroud_normal_text"
            android:gravity="center_vertical|left"
            android:inputType="number"
            android:hint="单行输入"
            android:paddingLeft="@dimen/dm020"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm008"
            android:layout_marginBottom="@dimen/dm008"
            android:textColorHint="@color/colorTextShallow"
            android:textSize="@dimen/dm024"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginLeft="@dimen/dm020"
        android:background="@drawable/backgroud_normal_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号类型"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm043"
            android:layout_gravity="center"/>
        <LinearLayout
            android:id="@+id/ll_add_member_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dm008"
            android:layout_marginBottom="@dimen/dm008"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@drawable/backgroud_normal_text"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_add_member_type"
                android:layout_width="@dimen/dm150"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:text="管理员"
                android:textColor="@color/colorTextShallow"
                android:textSize="@dimen/dm024"/>
            <ImageView
                android:layout_width="@dimen/dm025"
                android:layout_height="@dimen/dm015"
                android:layout_marginRight="@dimen/dm020"
                android:layout_gravity="center"
                android:src="@drawable/icon_member_down"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@drawable/backgroud_normal_white"
        android:id="@+id/ll_add_member_power"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间权限"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm020"
            android:textColor="@color/colorTextDeep"
            android:textSize="@dimen/dm024"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="@dimen/dm100"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginLeft="@dimen/dm020"
            android:id="@+id/rl_add_member_power"
            android:gravity="right|center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_item_flour_up"
                android:layout_width="@dimen/dm032"
                android:layout_height="@dimen/dm018"
                android:visibility="invisible"
                android:src="@drawable/icon_up"/>
            <ImageView
                android:id="@+id/iv_item_flour_down"
                android:layout_width="@dimen/dm032"
                android:layout_height="@dimen/dm018"
                android:src="@drawable/icon_down"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/rl_add_member_request"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginBottom="@dimen/dm064"
        android:background="@drawable/backgroud_button_app_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邀请"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
    </RelativeLayout>
</LinearLayout>
