<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm075"
                android:background="@color/transWhite">

    <ImageView
        android:id="@+id/iv_base_backto"
        android:layout_width="@dimen/dm020"
        android:layout_height="@dimen/dm036"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dm020"
        android:src="@drawable/base_back"/>
    <ImageView
        android:id="@+id/iv_base_back"
        android:layout_width="@dimen/dm033"
        android:visibility="gone"
        android:layout_height="@dimen/dm033"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_centerVertical="true"
        android:src="@drawable/img_voice_back"
        />
    <ImageView
        android:id="@+id/iv_base_more"
        android:layout_width="@dimen/dm042"
        android:visibility="gone"
        android:layout_height="@dimen/dm033"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_more"
        />
    <TextView
        android:id="@+id/tv_base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dm034"/>
    <ImageView
        android:id="@+id/iv_base_down"
        android:layout_width="@dimen/dm025"
        android:layout_height="@dimen/dm014"
        android:layout_toRightOf="@id/tv_base_title"
        android:layout_marginLeft="@dimen/dm015"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/icon_home_down"/>
    <ImageView
        android:id="@+id/iv_base_edit"
        android:layout_width="@dimen/dm038"
        android:layout_height="@dimen/dm038"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/base_edit"/>
</RelativeLayout>
